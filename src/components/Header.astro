---
import Navigation from "../components/Navigation.astro";
import { getBaseUrl } from "../helpers/filePathHelpers";

const {title} = Astro.props;
---
<div class="row">
    <a href=`${getBaseUrl()}/` class="title"><h1>{title}</h1></a>
    <Navigation />
</div>

<style>
    .row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        padding-top: 1rem;
        position: sticky;
        top: 0;
        background: white;
        border-bottom: solid;
    }
    .title {
        color: inherit;
        text-decoration: none;
    }
</style>